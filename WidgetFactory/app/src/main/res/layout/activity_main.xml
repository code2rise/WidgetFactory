<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <com.rise.widgetfactory.customviews.CustomTextView
        android:id="@+id/tvShowMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="SHOW POPUP"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <com.rise.widgetfactory.customviews.CustomButton
        android:id="@+id/test_popup_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Show Popup"
        android:background="@drawable/selector_rounded_corner_btn"/>

    <Button
        android:id="@+id/btnLaunchWebView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/test_popup_btn"
        android:text="Load URL"/>

    <com.rise.widgetfactory.customviews.CustomEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLaunchWebView"
        android:layout_marginTop="5dp"
        android:hint="Dummy Text Hint!!"
        android:background="@drawable/rounded_corner_edittext_background"/>

    <com.rise.widgetfactory.customviews.CustomButton
        android:id="@+id/btnShowDropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvShowMessage"
        android:layout_margin="5dp"
        android:text="Show Dropdown"
        android:textSize="22sp"/>

</RelativeLayout>
